<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    >

    <RelativeLayout
        android:layout_width="220dp"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Listado de Novedades"
            android:id="@+id/titulo"
            android:textSize="10dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textColor="#0060b6" />

        <Button

            android:text="Volver"
            android:id="@+id/btnVolver"
            android:textSize="10dp"
            android:textColor="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@drawable/roundbtn"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/btnEnviarNovedad"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Estudiante"
            android:id="@+id/txtViewEstudiante"
            android:textSize="10dp"
            android:textColor="#0060b6"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/titulo"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/radioGroup"
            android:layout_below="@+id/textView5"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="5dp">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enfermedad"
                android:id="@+id/rBtnEnfermedad"
                android:checked="false"
                android:textSize="8dp" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ausente, no salio, no subio"
                android:id="@+id/rBtnAusente"
                android:checked="false"
                android:textSize="8dp" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Abordo otra ruta"
                android:id="@+id/rBtnOtraRtua"
                android:checked="false"
                android:textSize="8dp" />
        </RadioGroup>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/editTextEvento"
            android:layout_below="@+id/textView4"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:hint="Escriba o Seleccione la novedad"
            android:textSize="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Texto Evento"
            android:id="@+id/textView4"
            android:layout_marginTop="10dp"
            android:textSize="10dp"
            android:textColor="#0060b6"
            android:layout_below="@+id/radioGroup"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:text="Enviar Novedad"
            android:id="@+id/btnEnviarNovedad"
            android:textSize="10dp"
            android:textColor="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_below="@+id/editTextEvento"
            android:layout_alignParentLeft="true"
            android:background="@drawable/roundbtn"
            android:layout_alignParentStart="true"
            android:layout_marginTop="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Seleccione y/o escriba la novedad "
            android:id="@+id/textView5"
            android:textSize="10dp"
            android:textColor="#0060b6"
            android:layout_below="@+id/txtViewEstudiante"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


    </RelativeLayout>
</RelativeLayout>
