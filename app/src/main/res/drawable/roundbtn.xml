<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="15dip" />
            <stroke android:width="1dip" android:color="#5882FA" />
            <gradient android:angle="-90" android:startColor="#5882FA" android:endColor="#5882FA"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="15dip" />
            <stroke android:width="1dip" android:color="#0060b6" />
            <solid android:color="#0060b6"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="15dip" />
            <stroke android:width="1dip" android:color="#0060b6" />
            <gradient android:angle="-90" android:startColor="#0060b6" android:endColor="#0060b6" />
        </shape>
    </item>
</selector>